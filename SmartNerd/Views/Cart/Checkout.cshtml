@model SmartNerd.Models.CartViewModels.CheckoutPage
@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>
@if (Model.Products.Count > 0)
{
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in Model.Products)
        {
            <tr>
                <td><a class="btn btn-danger" href="@Url.Action("RemoveProduct", "Menu", new { productID = p.ProductID, returnUrl = Url.Action("Checkout", "Cart") })">Remove</a></td>
                <td>@p.ProductName</td>
                <td>@p.Quantity</td>
                <td>@p.Price</td>
                <td>@(p.Price * p.Quantity)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"></td>
            <td class="text-right"><b>Order Total</b></td>
            <td>@Model.Total</td>
        </tr>
    </tfoot>
</table>

    <div class="text-right">
        <a class="btn btn-primary" href="@Url.Action("Address", "Cart")">Continue &gt;</a>
    </div>
}
else
{
    <div class="text-center">
        You must have items in your cart to continue.
    </div>
}