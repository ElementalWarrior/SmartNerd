@model SmartNerd.Models.Menu.MenuPage
<style>
    #menuListing img
    {
        display: block;
        height: 150px;
    }
    #menuListing a
    {
        display: block;
    }
    #menuListing div {
        padding-bottom: 15px;
        padding-top: 15px;
    }
</style>
<img src="/Images/m/@(Model.CategoryID).png" id="menuBanner"/>
<div class="col-sm-2">
    <div class="sideCategory">
        <h3>Categories</h3>
        <ol>
            @foreach(var cat in Model.Categories)
            {
                <li><a href="@Url.Action("Index", "Menu", new {categoryID = cat.CategoryID})">@cat.CategoryName</a></li>
            }
        </ol>
    </div>
</div>
<div class="col-sm-10">
    <h2>Products</h2>
    <div id="menuListing" class="row">
        @foreach (var prod in Model.Products)
        {
            <div class="col-sm-4 col-md-3"><a href="@Url.Action("Product", "Menu", new { productID = prod.ProductID })"><img src="@SmartNerd.Classes.Util.ProductUrl(prod.ProductID)"/><span>@prod.ProductName</span></a></div>
        }
    </div>
</div>