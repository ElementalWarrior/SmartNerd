@model SmartNerd.Models.Menu.Product
@{
    ViewBag.Title = Model.ProductName;
    ViewBag.ShowSidebar = true;
}
<div id="productPage">
    @using (Html.BeginForm("Product", "Menu", FormMethod.Post))
    {
        
        <img id="productPageImg" src="@SmartNerd.Classes.Util.ProductUrl(Model.ProductID)" alt="@Model.ProductName" />

        <div id="productDetails">
            <h2>@Model.ProductName</h2>
            @Html.HiddenFor(m => m.ProductID)

            @Html.Raw(Model.Description)
            <br /><br/>
            $@Model.Price

            <br/><br/>
            Only @Model.Inventory left!

            <br/><br/>
            Qty: @Html.TextBoxFor(m => m.Quantity, new { id = "productEditQty"})
            <input type="submit" value="Add to Cart" />
        </div>
    }
    <div class="clear"></div>
</div>